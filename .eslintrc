{
  "parser": "babel-eslint",
  "rules": {
    "no-console": 0,
    "camelcase": 2,
    "comma-spacing": 2,
    "curly": [2, "all"],
    "dot-notation": [2, {
        "allowKeywords": true
      }],
    "eol-last": 2,
    "eqeqeq": 2,
    "indent": [2, 2],
    "key-spacing": [2, {
        "beforeColon": false,
        "afterColon": true
      }],
    "linebreak-style": [2, "unix"],
    "new-cap": 2,
    "new-parens": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "semi-spacing": [2, {
        "before": false,
        "after": true
      }],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "space-unary-ops": [2, {
        "words": true,
        "nonwords": false
      }],
    "strict": [2, "global"],
    "yoda": [2, "never"]
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended"
}
